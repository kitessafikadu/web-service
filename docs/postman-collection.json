    {
      "name": "SOAP API - Currency Converter",
      "item": [
        {
          "name": "Convert USD to EUR",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "text/xml; charset=utf-8"
              },
              {
                "key": "SOAPAction",
                "value": "urn:ConvertCurrency"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "<soapenv:Envelope xmlns:soapenv=\"http://schemas.xmlsoap.org/soap/envelope/\"\n                  xmlns:ws=\"http://www.currencyconverter.com/wsdl\">\n   <soapenv:Header/>\n   <soapenv:Body>\n      <ws:ConvertCurrency>\n         <fromCurrency>USD</fromCurrency>\n         <toCurrency>EUR</toCurrency>\n         <amount>100</amount>\n      </ws:ConvertCurrency>\n   </soapenv:Body>\n</soapenv:Envelope>"
            },
            "url": {
              "raw": "http://localhost:8000/wsdl",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["wsdl"]
            }
          }
        },
